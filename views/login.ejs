<%- include('partials/header') %>
    <div class="limiter">
        <div class="container">
            <div class="wrapper">
                <form class="form-login" action="/login" method="POST">
                    <div class="form-img">
                        <img src="img/logo.png" alt="IMG">
                    </div>
                    <h4 class="title-atas">Hydroponic</h4>
                    <h6 class="title-bawah">Automation and Monitoring System</h6>
                    <fieldset>
                        <div class="form-group">
                            <input id="username" class="form-control" type="text" name="username" placeholder="Username" autofocus>
                        </div>
                        <div class="form-group">
                            <input id="password" class="form-control" type="password" name="password" placeholder="Password" autofocus>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-md btn-primary btn-login" type="submit">Login</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
