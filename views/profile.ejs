<%- include('partials/header') %>
    <!-- Navbar -->
	<nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
		<div class="container-fluid">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sidebar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="#"><span>Hidro</span>Ponik</a>
			</div>
		</div>
	</nav>
	<!-- END Navbar -->

    <!-- Sidebar -->
	<div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
		<div class="profile-sidebar">
			<!-- Pictures Profile -->
			<div class="profile-userpic">
				<img src="img/user.png" class="img-responsive" alt="">
			</div>

			<!-- Username & Status Profile -->
			<div class="profile-usertitle">
				<% if (biodata.length > 0) { %>
					<% biodata.forEach(function(item, index) { %>
						<div class="profile-usertitle-name"><%= item.username %></div>
						<div class="profile-usertitle-status"><span class="indicator label-success"></span>Online</div>
					<% }) %>
				<% } %>
			</div>
			<div class="clear"></div>
		</div>
		<div class="divider"></div>

		<!-- Menu Sidebar -->
		<ul class="nav menu">
			<li><a href="/"><em class="fas fa-tachometer-alt">&nbsp;</em> Dashboard</a></li>
			<li><a href="/penjadwalan"><em class="far fa-calendar-alt">&nbsp;</em> Penjadwalan</a></li>
            <li class="active"><a href="/profile"><em class="fas fa-user">&nbsp;</em> Profile</a></li>
            <li><a href="/logout"><em class="fas fa-power-off">&nbsp;</em> Logout</a></li>
		</ul>
		<!-- END Menu Sidebar -->
	</div>
	<!-- END Sidebar -->

    <!-- Content -->
    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="#">
					<em class="fa fa-home"></em>
				</a></li>
				<li class="active">Profile</li>
			</ol>
		</div><!--/.row-->

        <div class="clearfix"></div>
		
		<div class="row">
			<div class="col-md-3 col-xs-12">
				<div class="panel panel-default">
					<% if (biodata.length > 0) { %>
						<% biodata.forEach(function(item, index) { %>
							<div class="panel-body">
								<center class="no-padding">
									<img src="img/user.png" class="img-responsive img-profile" alt="">
									<h4 class="title-profile"><%= item.nama %></h4>
									<h6 class="status-profile"><%= item.prodi %></h6>
								</center>
							</div>
							<hr class="no-padding" size="10px">
							<div class="panel-body">
								<small>Nomor Induk Mahasiswa</small>
									<h6 class="text-title"><%= item.nim %></h6>
									<small>Alamat E-Mail</small>
									<h6 class="text-title"><%= item.email %></h6>
									<small>Telepon</small>
									<h6 class="text-title"><%= item.telepon %></h6>
									<small>Alamat</small>
									<h6 class="text-title"><%= item.alamat %></h6>
							</div>
						<% }) %>
					<% } %>
                </div>
			</div>
            <!-- Form Edit Profile -->
			<div class="col-md-9 col-xs-12">
				<div class="panel panel-default">
					<div class="panel-heading">Edit Profile</div>
					<div class="panel-body">
						<% if (biodata.length > 0) { %>
							<% biodata.forEach(function(item, index) { %>
								<div class="col-xs-12 col-sm-12 col-md-12">
									<form action="/update_biodata" method="POST">
										<div class="form-group">
											<label class="col-md-12 label-text" for="">Nama Lengkap</label>
											<div class="col-md-12">
												<input class="form-control" name="nama" id="nama" value="<%= item.nama %>">
											</div>
										</div>
										<div class="form-group">
											<label class="col-md-12 label-text" for="">Nomor Induk Mahasiswa</label>
											<div class="col-md-12">
												<input class="form-control" name="nim" id="nim" value="<%= item.nim %>" readonly>
											</div>
										</div>
										<div class="form-group">
											<label class="col-md-12 label-text" for="">Prodi</label>
											<div class="col-md-12">
												<input class="form-control" name="prodi" id="prodi" value="<%= item.prodi %>" readonly>
											</div>
										</div>
										<div class="form-group">
											<label class="col-md-12 label-text" for="">Alamat E-mail</label>
											<div class="col-md-12">
												<input class="form-control" name="email" id="email" value="<%= item.email %>">
											</div>
										</div>
										<div class="form-group">
											<label class="col-md-12 label-text" for="">Telepon</label>
											<div class="col-md-12">
												<input class="form-control" name="telepon" id="telepon" value="<%= item.telepon %>">
											</div>
										</div>
										<div class="form-group">
											<label class="col-md-12 label-text" for="">Alamat</label>
											<div class="col-md-12">
												<textarea class="form-control form-control-line" name="alamat" id="alamat" rows="5" required=""><%= item.alamat %></textarea>
											</div>
										</div>
										<div class="form-group">
											<div class="col-md-12">
												<button class="btn btn-md btn-primary pull-right mb-2" type="submit">UPDATE</button>
											</div>
										</div>
									</form>
								</div>
							<% }) %>
						<% } %>
					</div>
				</div>
			</div>
		</div><!--/.row-->
	</div>
	<!-- END Content -->
<%- include('partials/footer') %>